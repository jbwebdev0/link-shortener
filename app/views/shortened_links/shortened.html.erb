
<div class="container">
	<div class="row">
		<div class="col"><h1>Url Shortener</h1></div>
		<div class="col-md-12">
			<h3>Use this Url Shortener service to shorten long urls</h3>
		</div>
		
		<div class="col-md-6 offset-md-3">
			
			<form action="/shortened_links/create", method="post" >
				 <div class="form-group">
					<input class="form-control" type="url", value="", name="original_url", placeholder="http://">
				</div>
		</div>
		<div class="col-md-3">
				<button type="submit" class="btn btn-primary">Submit</button>
		</div>
			</form>
		</div>
	</div>
</div>

<div class="container">
<div class="row">
		<div class="col">
			<h3 class="short-link"><span class="short-link">Your new short link:</span> <%= @short_url %></h3>
		</div>
	</div>	
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h2>Recent added URLs</h2>
		</div>
		<div class="col-md-12">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th scope="col">Original Url</th>
						<th scope="col">Short Url</th>
						<th scope="col">Created</th>
						<th scope="col">Hits</th>
					</tr>
				</thead>
				<tbody>
				<% @recently_created.each do |row| %>
				<tr>
					<td><%= row.original_url %></td>
					<td class="cells"><%= root_url + row.short_url %></td>
					<td class="cells"><%= row.created_at.strftime('%d-%m-%Y %H:%M') %></td>
					<td class="cells"><%= row.hits %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>
</div>	

